{
	"name": "student-mgmt-backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"license": "MIT",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"start": "nest start",
		"start:dev": "env NODE_ENV=development nest start --watch",
		"start:demo": "env NODE_ENV=demo nest start --watch",
		"start:debug": "env NODE_ENV=development nest start --debug --watch",
		"start:main": "env NODE_ENV=demo node dist/src/main",
		"start:prod": "env NODE_ENV=production node dist/src/main",
		"lint": "eslint src test --ext .ts,.tsx",
		"lint:fix": "eslint src test --ext .ts,.tsx --fix",
		"prettier:check": "prettier --check **/*",
		"prettier:write": "prettier --write **/*",
		"test": "env NODE_ENV=testing jest --config ./test/jest-unit.json",
		"test:watch": "env NODE_ENV=testing jest --watch --config ./test/jest-unit.json",
		"test:cov": "env NODE_ENV=testing jest --coverage --config ./test/jest-unit.json",
		"test:debug": "env NODE_ENV=testing node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config ./test/jest-unit.json",
		"test:e2e": "env NODE_ENV=testing jest --runInBand --config ./test/jest-e2e.json",
		"test:e2ecov": "env NODE_ENV=testing jest --runInBand --config ./test/jest-e2e.json --coverage"
	},
	"dependencies": {
		"@nestjs/common": "^7.6.15",
		"@nestjs/core": "^7.6.15",
		"@nestjs/cqrs": "^7.0.1",
		"@nestjs/platform-express": "^7.6.15",
		"@nestjs/schedule": "^0.4.3",
		"@nestjs/swagger": "^4.8.0",
		"@nestjs/typeorm": "^7.1.5",
		"bcryptjs": "^2.4.3",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.1",
		"config": "^3.3.6",
		"cron": "^1.8.2",
		"exceljs": "^4.2.1",
		"flat": "^5.0.2",
		"json2csv": "^5.0.6",
		"node-cache": "^5.1.2",
		"nodemailer": "^6.6.0",
		"pg": "^8.6.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.0.1",
		"swagger-ui-express": "^4.1.6",
		"typeorm": "^0.2.32",
		"unique-names-generator": "^4.5.0"
	},
	"devDependencies": {
		"@nestjs/cli": "^7.6.0",
		"@nestjs/schematics": "^7.3.1",
		"@nestjs/testing": "^7.6.15",
		"@types/cron": "^1.7.2",
		"@types/express": "^4.17.11",
		"@types/jest": "^26.0.23",
		"@types/node": "^15.0.3",
		"@types/nodemailer": "^6.4.1",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^4.23.0",
		"@typescript-eslint/parser": "^4.23.0",
		"eslint": "^7.26.0",
		"jest": "^26.6.3",
		"prettier": "^2.3.0",
		"supertest": "^6.1.3",
		"ts-jest": "^26.5.6",
		"ts-loader": "^9.1.2",
		"ts-node": "^9.1.1",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.2.4"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
