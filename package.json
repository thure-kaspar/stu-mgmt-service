{
	"name": "student-mgmt-backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"license": "MIT",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"start:dev": "env NODE_ENV=development nest start --watch",
		"start:debug": "env NODE_ENV=development nest start --debug --watch",
		"start:demo": "env NODE_ENV=demo nest start",
		"start:main": "env NODE_ENV=demo node dist/src/main",
		"start:prod": "env NODE_ENV=production node dist/src/main",
		"lint": "eslint src test --ext .ts,.tsx",
		"lint:ci": "eslint src test --ext .ts,.tsx --format checkstyle --output-file output/eslint/eslint.xml || exit 0",
		"lint:fix": "eslint src test --ext .ts,.tsx --fix",
		"prettier:check": "prettier --check **/*",
		"prettier:write": "prettier --write **/*",
		"test": "env NODE_ENV=testing jest --config ./test/jest-unit.json",
		"test:watch": "env NODE_ENV=testing jest --watch --runInBand --config ./test/jest-unit.json",
		"test:cov": "env NODE_ENV=testing jest --coverage --config ./test/jest-unit.json",
		"test:debug": "env NODE_ENV=testing node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config ./test/jest-unit.json",
		"test:e2e": "env NODE_ENV=testing env TZ='Europe/Berlin' jest --runInBand --config ./test/jest-e2e.json",
		"test:e2ecov": "env NODE_ENV=testing env TZ='Europe/Berlin' jest --runInBand --config ./test/jest-e2e.json --coverage",
		"test:jenkins": "env NODE_ENV=testing env TZ='Europe/Berlin' env JEST_JUNIT_OUTPUT_FILE=output/test/junit.xml jest --ci --reporters=default --reporters=jest-junit --runInBand --coverage --coverageDirectory=output/test/coverage --config ./test/jest-ci.json",
		"test:github": "env NODE_ENV=testing env TZ='Europe/Berlin' jest --ci --reporters=default --reporters=jest-github-actions-reporter --runInBand --config ./test/jest-ci.json",
		"typeorm": "env NODE_ENV=production node --require ts-node/register ./node_modules/typeorm/cli.js"
	},
	"dependencies": {
		"@nestjs/axios": "^3.1.3",
		"@nestjs/common": "^10.4.15",
		"@nestjs/core": "^10.4.15",
		"@nestjs/cqrs": "^10.2.8",
		"@nestjs/platform-express": "^10.4.15",
		"@nestjs/schedule": "^4.1.2",
		"@nestjs/swagger": "^8.1.0",
		"@nestjs/typeorm": "^10.0.2",
		"bcryptjs": "^2.4.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"config": "^3.3.12",
		"cron": "^3.3.1",
		"dayjs": "^1.11.13",
		"exceljs": "^4.4.0",
		"flat": "^6.0.1",
		"json2csv": "^5.0.7",
		"node-cache": "^5.1.2",
		"nodemailer": "^6.9.16",
		"pg": "^8.13.1",
		"reflect-metadata": "^0.2.2",
		"rimraf": "^6.0.1",
		"rxjs": "^7.8.1",
		"swagger-ui-express": "^5.0.1",
		"template-jsx": "^1.0.0",
		"typeorm": "^0.3.20",
		"unique-names-generator": "^4.7.1",
		"yup": "^1.6.1"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.4.9",
		"@nestjs/schematics": "^10.2.3",
		"@nestjs/testing": "^10.4.15",
		"@types/config": "^3.3.5",
		"@types/cron": "^2.4.3",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.2",
		"@types/nodemailer": "^6.4.17",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^8.18.2",
		"@typescript-eslint/parser": "^8.18.2",
		"eslint": "^9.17.0",
		"jest": "^29.7.0",
		"jest-github-actions-reporter": "^1.0.3",
		"jest-junit": "^16.0.0",
		"prettier": "^3.4.2",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.2"
	}
}
